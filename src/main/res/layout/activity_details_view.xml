<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5"
    tools:context=".DetailsViewActivity">

    <TextView
        android:id="@+id/MedicoMart"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="MedicoMart"
        android:textColor="#4CAF50"
        android:textSize="36sp"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/MedicoMartImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/MedicoMartDesc"
        android:layout_width="match_parent"
        android:layout_height="19dp"
        android:layout_marginStart="105dp"
        android:text="Online Shop For Medicine"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/MedicoMartImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/MedicoMart" />

    <ImageView
        android:id="@+id/Back_button"
        android:layout_width="70dp"
        android:layout_height="46dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="16dp"
        app:srcCompat="@drawable/baseline_arrow_back_24" />

    <!-- Product Image -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/everherbkarela" />

    <!-- Product Name -->
    <TextView
        android:id="@+id/mname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Everherb Karela Jamun Juice - Helps Maintains Healthy Sugar Levels -Helps In Weight Management - 1l"
        android:textSize="18sp"
        android:textColor="#000"
        android:fontFamily="sans-serif-medium"
        android:textAlignment="center"
        android:textStyle="bold" />

    <!-- Price -->
    <TextView
        android:id="@+id/mprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="â‚¹215.46"
        android:textSize="16sp"
        android:textColor="#FF5722"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textStyle="bold" />

    <!-- deliver -->
    <TextView
        android:id="@+id/mdeliver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Delivery by Tomorrow, Today, 6:00 pm - 10:00 pm"
        android:textSize="16sp"
        android:textColor="#000"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textStyle="bold" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center">

    <Button
        android:id="@+id/ordersms"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:backgroundTint="#28BCB3"
        android:text="Order by SMS"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/orderemail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:backgroundTint="#28BCB3"
        android:text="Order by Email"
        android:textColor="#FFF" />

    </LinearLayout>

    <Button
        android:id="@+id/qrcode"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="0dp"
        android:layout_weight="0"
        android:backgroundTint="#28BCB3"
        android:text="QR Payment"
        android:textColor="#FFF" />

</LinearLayout>